  <script>
    // Product data (as requested)
    const PRODUCTS = [
      {id:'b1',name:'Idli & Dosa Batter',price:55,unit:'500g',desc:'Soft & tasty.'},
      {id:'b2',name:'Adai Batter',price:60,unit:'500g',desc:'Protein-rich.'},
      {id:'p1',name:'Idli Podi',price:55,unit:'100g',desc:'Spicy & fresh.'},
      {id:'p2',name:'Garlic Podi',price:50,unit:'100g',desc:'Bold garlic.'},
      {id:'o1',name:'Coconut Oil',price:180,unit:'1L',desc:'Pure.'},
      {id:'o2',name:'Groundnut Oil',price:160,unit:'1L',desc:'Nutty.'},
      {id:'o3',name:'Gingelly Oil',price:200,unit:'1L',desc:'Aromatic.'},
      {id:'c1',name:'Small Coconut',price:30,unit:'pc',desc:'Fresh.'},
      {id:'c2',name:'Medium Coconut',price:35,unit:'pc',desc:'Balanced.'},
      {id:'c3',name:'Big Coconut',price:40,unit:'pc',desc:'Juicy.'}
    ];

    const PACKAGING_FEE = 15;
    let cart = {};

    const productsEl = document.getElementById('products');
    const cartListEl = document.getElementById('cartList');
    const totalPriceEl = document.getElementById('totalPrice');
    const orderResultEl = document.getElementById('orderResult');

    function renderProducts(){
      productsEl.innerHTML = '';
      PRODUCTS.forEach(p => {
        const el = document.createElement('div');
        el.className = 'product';
        el.innerHTML = `
          <div class="img">${p.name.split(' ').slice(0,2).map(w=>w[0]).join('')}</div>
          <div class="meta">
            <h3>${p.name}</h3>
            <p class="muted">${p.unit} â€¢ â‚¹${p.price}</p>
            <p class="muted">${p.desc}</p>
          </div>
          <div class="controls">
            <div>
              <label class="muted">Qty</label>
              <input type="number" min="1" value="1" id="qty-${p.id}">
            </div>
            <div style="margin-top:8px">
              <button data-id="${p.id}" class="addBtn">Add to Cart</button>
            </div>
          </div>
        `;
        productsEl.appendChild(el);
      });
      document.querySelectorAll('.addBtn').forEach(b=>b.addEventListener('click',addToCart));
    }

    function addToCart(e){
      const id = e.currentTarget.dataset.id;
      const qtyEl = document.getElementById(`qty-${id}`);
      const qty = Math.max(1,parseInt(qtyEl.value)||1);
      const prod = PRODUCTS.find(x=>x.id===id);
      if(!prod) return;
      if(cart[id]) cart[id].qty += qty; else cart[id] = {...prod, qty};
      renderCart();
      showToast('Item added to cart ðŸ›’');
    }

    function renderCart(){
      cartListEl.innerHTML = '';
      let subtotal = 0;
      Object.values(cart).forEach(item=>{
        const div = document.createElement('div');
        div.className='cart-item';
        const line = document.createElement('div');
        line.innerHTML = `${item.name} x ${item.qty} <span class="muted">(${item.unit})</span>`;
        const right = document.createElement('div');
        right.innerHTML = `â‚¹${item.price*item.qty} <button class="small" data-id="${item.id}" style="margin-left:8px">Remove</button>`;
        div.appendChild(line);div.appendChild(right);
        cartListEl.appendChild(div);
        subtotal += item.price*item.qty;
      });
      const total = subtotal>0 ? subtotal + PACKAGING_FEE : 0;
      totalPriceEl.textContent = `â‚¹${total}`;
      document.querySelectorAll('.cart-item .small').forEach(btn=>btn.addEventListener('click',removeItem));
    }

    function removeItem(e){
      const id = e.currentTarget.dataset.id;
      delete cart[id];
      renderCart();
    }

    document.getElementById('clearBtn').addEventListener('click',()=>{cart={};renderCart();orderResultEl.innerHTML='';});

    document.getElementById('checkoutBtn').addEventListener('click',()=>{
      if(Object.keys(cart).length===0){showToast('Cart is empty');return}
      const name = prompt('Enter your name','');
      if(!name){showToast('Order cancelled');return}
      const phone = prompt('Phone number','8072100476');
      if(!phone){showToast('Order cancelled');return}
      const address = prompt('Address','6th Sector, Morais City, Trichy');
      if(!address){showToast('Order cancelled');return}

      // build order summary
      let subtotal = 0;
      let itemsList = '';
      Object.values(cart).forEach(i=>{subtotal += i.price*i.qty; itemsList += `${i.name} x ${i.qty} â€” â‚¹${i.price*i.qty}\n`;});
      const total = subtotal + PACKAGING_FEE;
      const orderText = `Order Summary:\nName: ${name}\nPhone: ${phone}\nAddress: ${address}\n\nItems:\n${itemsList}\nPackaging: â‚¹${PACKAGING_FEE}\nTotal: â‚¹${total}`;

      // show result and success
      orderResultEl.innerHTML = `<div class="success">Order Placed Successfully âœ…<br><pre style="white-space:pre-wrap">${orderText}</pre></div>`;

      // mock send to admin: open mailto (works if email client exists)
      const mailto = `mailto:sahidyack04@gmail.com?subject=New%20Order%20from%20Sai%20Products&body=${encodeURIComponent(orderText)}`;
      // open mail client in new tab
      window.open(mailto,'_blank');

      // clear cart
      cart = {};
      renderCart();
    });

    function showToast(msg){
      const s = document.createElement('div');
      s.className='success';
      s.style.position='fixed';s.style.right='18px';s.style.bottom='18px';s.style.zIndex=9999;
      s.textContent = msg;
      document.body.appendChild(s);
      setTimeout(()=>s.remove(),2200);
    }

    // initial
    renderProducts();
    renderCart();
  </script>
</body>
